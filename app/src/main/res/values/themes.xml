<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NumberSequenceTrainer.Extended" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightskyblue</item>
        <item name="colorSecondaryVariant">@color/deepskyblue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Font -->
        <item name="fontFamily">@font/roboto_medium_italic</item>
        <item name="android:fontFamily">@font/roboto_medium_italic</item>
    </style>

    <style name="Theme.NumberSequenceTrainer.Main" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Primary -->
        <item name="colorPrimary">#7edeea</item>
        <item name="colorPrimaryDark">#48acb8</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryVariant">#b2ffff</item>
        <!-- Secondary -->
        <item name="colorSecondary">#f1f8e9</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Font -->
        <item name="fontFamily">@font/roboto_medium_italic</item>
        <item name="android:fontFamily">@font/roboto_medium_italic</item>
    </style>
</resources>